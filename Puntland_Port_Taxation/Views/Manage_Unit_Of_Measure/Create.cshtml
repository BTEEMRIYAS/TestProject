@model Puntland_Port_Taxation.Unit_Of_Measure

<div>
    <a href="javascript:void(0);" onclick="closePopup()"><div class="close_button"></div></a>
    <div class="clear"></div>
</div>
<div class="form">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "add_unit", name = "add_unit" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            <div class="editor-label">
                @Html.LabelFor(model => model.unit_code, "Unit Code")
                @Html.TextBoxFor(model => model.unit_code, new { @class = "input" })
                @Html.ValidationMessageFor(model => model.unit_code)
                <div id="error_unit_code" class="val__msgbx"></div>
                <div class="clear"></div>
            </div>
          <div class="editor-label">
                @Html.LabelFor(model => model.unit_name, "Unit Name")
                @Html.TextBoxFor(model => model.unit_name, new { @class = "input" })
                @Html.ValidationMessageFor(model => model.unit_name)
                <div id="error_unit_name" class="val__msgbx"></div>
                <div class="clear"></div>
            </div>

            <div class="editor-label label_button">
                <input type="submit" value="Save" class="save_button" onclick="return unit_add()" />
                <a href="javascript:void(0);" class="text_style" onclick="closePopup()">
                    <input type="button" value="Cancel" class="save_button cancel_button" id="createUser" name="Save" />
                </a>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
    }
    <div class="clear"></div>
</div>
