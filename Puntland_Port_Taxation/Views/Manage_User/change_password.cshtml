@model Puntland_Port_Taxation.Models.Change_User_Password
<div>
    <a href="javascript:void(0);" onclick="closePopup()"><div class="close_button"></div></a>
    <div class="clear"></div>
</div>
<div class="form">
@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "user_change_password", id = "user_change_password" })) 
{       
        <div class="editor-label">
            @Html.LabelFor(model => model.old_password, "Old Password")
            @Html.PasswordFor(model => model.old_password, new { @class = "input", @onblur = "check_old_password()" })
            @Html.ValidationMessageFor(model => model.old_password)
            <div id="error_old_password" class="val__msgbx"></div>
            <div class="clear"></div>
        </div>
    
        <div class="editor-label">
            @Html.LabelFor(model => model.new_password, "New Password")
            @Html.PasswordFor(model => model.new_password, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.new_password)
            <div id="error_new_password" class="val__msgbx"></div>
            <div class="clear"></div>
        </div>
    
        <div class="editor-label">
            @Html.LabelFor(model => model.confirm_password, "Confirm Password")
            @Html.PasswordFor(model => model.confirm_password, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.confirm_password)
            <div id="error_confirm_password" class="val__msgbx"></div>
            <div class="clear"></div>
        </div>
    
        <div class="editor-label label_button">
            <input type="submit" value="Change" id="save_button" class="save_button" onclick="return userReg_change_password()" />
        </div>
        <div class="editor-label label_button">
            <a href="javascript:void(0);" class="text_style" onclick="closePopup()">
                <input type="button" value="Cancel" class="save_button cancel_button" />
            </a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
}
        <div class="clear"></div>
</div>
