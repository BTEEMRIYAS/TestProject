@model Puntland_Port_Taxation.Models.Change_User_Password
<div>
    <a href="javascript:void(0);" onclick="closePopup()"><div class="close_button"></div></a>
    <div class="clear"></div>
</div>
<div class="form">
@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "password_forgot", id = "password_forgot" })) 
{       
        <div class="editor-label">
            @Html.LabelFor(model => model.user_name, "User Name")
            @Html.TextBoxFor(model => model.user_name, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.user_name)
            <div id="error_user_name" class="val__msgbx"></div>
            <div class="clear"></div>
        </div>
    
        <div class="editor-label">
            @Html.LabelFor(model => model.email_id, "Email Id")
            @Html.TextBoxFor(model => model.email_id, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.email_id)
            <div id="error_email_id" class="val__msgbx"></div>
            <div class="clear"></div>
        </div>
    
        <div class="editor-label label_button">
            <input type="submit" value="Submit" id="save_button" class="save_button" onclick="return forgot_password_validation()" />
        </div>
        <div class="editor-label label_button">
            <a href="javascript:void(0);" class="text_style" onclick="closePopup()">
                <input type="button" value="Cancel" class="save_button cancel_button" />
            </a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
}
        <div class="clear"></div>
</div>